name = CR Layout V2
description = Please provide a description for your theme.
base theme = omega
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; ========================================
; Stylesheets
; ========================================
stylesheets[all][] = css/cr-layout-v2.normalize.css
stylesheets[all][] = css/cr-layout-v2.styles.css
stylesheets[all][] = css/cr-layout-v2.no-query.css

; ========================================
; Script Libraries
; ========================================

; ========================================
; Scripts
; ========================================
; Template file:
; scripts[] = js/cr-layout-v2.behaviors.js

; ========================================
; Regions
; ========================================
regions[branding] = Branding
regions[header] = Header
regions[navigation] = Navigation
regions[highlighted] = Highlighted
regions[help] = Help
regions[content] = Content
regions[sidebar_first] = First Sidebar
regions[sidebar_second] = Second Sidebar
regions[footer] = Footer

regions[qa_mega_nav]    = QA MEGA NAV

; ========================================
; Plugins
; ========================================
plugins[panels][layouts] = panels/layouts

; ========================================
; Settings
; ========================================
settings[toggle_logo] = 1
settings[toggle_name] = 1
settings[toggle_slogan] = 0
settings[toggle_node_user_picture] = 0
settings[toggle_comment_user_picture] = 0
settings[toggle_comment_user_verification] = 0
settings[toggle_favicon] = 1
settings[toggle_main_menu] = 0
settings[toggle_secondary_menu] = 0
settings[omega_toggle_front_page_content] = 1
settings[default_logo] = 0
settings[logo_path] = sites/all/themes/custom/cr_layout_v2/images/comic_relief_logo.png
settings[logo_upload] = ""
settings[default_favicon] = 0
settings[favicon_path] = sites/all/themes/custom/cr_layout_v2/favicon.ico
settings[favicon_upload] = ""
settings[omega_enable_warning] = 1
settings[omega_toggle_extension_layouts] = 1
settings[omega_layout] = cr-responsive
settings[omega_toggle_extension_development] = 1
settings[omega_rebuild_theme_registry] = 0
settings[omega_rebuild_aggregates] = 0
settings[omega_browser_width_indicator] = 0
settings[omega_toggle_extension_compatibility] = 1
settings[omega_conditional_classes_html] = 1
settings[omega_apple_touch] = 0
settings[omega_cleartype] = 0
settings[omega_handheld_friendly] = 0
settings[omega_mobile_optimized] = 0
settings[omega_viewport] = 1
settings[omega_viewport_initial_scale] = 1.0
settings[omega_viewport_user_scaleable] = 1
settings[omega_chrome_edge] = 0
settings[omega_chrome_popup] = 0
settings[omega_chrome_notice] = 0
settings[omega_toggle_extension_assets] = 1
settings[omega_js_footer][] = :contrib/*
settings[omega_js_footer][] = :current-theme/*
settings[omega_js_footer][] = :base-theme/*
settings[omega_libraries][selectivizr][status] = 0
settings[omega_libraries][respond][status] = 0
settings[omega_libraries][pie][status] = 0
settings[omega_libraries][html5shiv][status] = 0
settings[favicon_mimetype] = image/vnd.microsoft.icon
